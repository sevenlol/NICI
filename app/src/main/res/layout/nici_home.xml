<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".NICIHomeActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/home_action_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <RelativeLayout
        android:id="@+id/home_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*">
            <TableRow
                android:layout_marginBottom="@dimen/show_icon_row_bottom_margin">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:layout_width="0dp">
                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/show_intro_btn"
                        android:src="@drawable/ic_home_white_24dp"
                        app:backgroundTint="@color/showIntroIcon"
                        app:elevation="@dimen/show_icon_elevation"
                        android:elevation="@dimen/show_icon_elevation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="@string/show_intro_page"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/show_icon_text_margin"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:layout_width="0dp">
                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/show_project_btn"
                        android:src="@drawable/ic_home_white_24dp"
                        app:backgroundTint="@color/showProjectIcon"
                        app:elevation="@dimen/show_icon_elevation"
                        android:elevation="@dimen/show_icon_elevation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="@string/show_project_page"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/show_icon_text_margin"/>
                </LinearLayout>
            </TableRow>
            <TableRow
                android:layout_marginBottom="@dimen/show_icon_row_bottom_margin">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:layout_width="0dp">
                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/show_meeting_btn"
                        android:src="@drawable/ic_home_white_24dp"
                        app:backgroundTint="@color/showMeetingIcon"
                        app:elevation="@dimen/show_icon_elevation"
                        android:elevation="@dimen/show_icon_elevation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="@string/show_meeting_page"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/show_icon_text_margin"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:layout_width="0dp">
                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/show_info_btn"
                        android:src="@drawable/ic_home_white_24dp"
                        app:backgroundTint="@color/showInfoIcon"
                        app:elevation="@dimen/show_icon_elevation"
                        android:elevation="@dimen/show_icon_elevation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="@string/show_info_page"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/show_icon_text_margin"/>
                </LinearLayout>
            </TableRow>
        </TableLayout>
    </RelativeLayout>
</LinearLayout>
